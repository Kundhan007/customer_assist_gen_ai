{
  "name": "customer-assist-gen-ai-backend",
  "version": "0.0.1",
  "description": "Backend for Customer Assist Gen AI with Python Orchestrator",
  "author": "Kundhan",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "lsof -ti:3000 | xargs kill -9 || true && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "ts-node test/setup-db.ts",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json",
    "test:setup": "ts-node test/setup-db.ts",
    "setup:test-db": "ts-node test/setup-db.ts",
    "setup:prod-db": "ts-node src/scripts/seed-database.ts",
    "seed:production": "ts-node src/scripts/seed-database.ts",
    "setup:faq-vectors:test": "ts-node test/setup-faq-vectors.ts",
    "setup:faq-vectors:prod": "ts-node src/database/seed/setup-production-vectors.ts",
    "generate-vectors": "ts-node src/scripts/generate-vectors.ts",
    "vectorize:faqs": "ts-node src/scripts/bulk-vectorize.ts",
    "test:faq-vectorization": "ts-node test/test-faq-vectorization.ts",
    "db:stats": "ts-node src/database/seed/setup-production-vectors.ts --stats",
    "python:start": "cd .. && ./run_api.sh",
    "python:setup": "cd .. && ./setup_api.sh",
    "python:test": "cd .. && ./test_run.sh",
    "orchestrator:start": "lsof -ti:2345 | xargs kill -9 || true && cd ../python_orchestrator && ./start_fastapi.sh",
    "orchestrator:stop": "lsof -ti:2345 | xargs kill -9",
    "dev:all": "concurrently \"npm run orchestrator:start\" \"npm run start:dev\""
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/multer": "^2.0.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "multer": "^2.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
